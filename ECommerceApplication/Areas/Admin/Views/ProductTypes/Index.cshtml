@using ECommerceApplication.Models;
@model IEnumerable<ProductTypes>

<br/><br/>
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Product Type List</h2>
    </div>
    <div class="col-6 text-right" >
         <a asp-controller="ProductTypes" asp-action="Create"  class="btn btn-info">&nbsp; <i class="fas fa-plus"></i> New Product Type</a>
    </div>
</div>
<br/>
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(c => c.ProductType)
            </th>
        </tr>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.ProductType</td>
                <td>
                    <partial name="_ButtonPartial" model="@item.Id"/>
                </td>
            </tr>
        }
    </table>
</div>

@section scripts{
<script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
<script type="text/javascript">
$(function(){
    var save = '@TempData["save"]'
    if(save != ''){
          alertify.success(save);
    }
    var remove = '@TempData["remove"]'
    if(remove != ''){
         alertify.error(remove);
    }
    var update = '@TempData["update"]'
    if(update != ''){
         alertify.warning(update);
    }
})
</script>
}